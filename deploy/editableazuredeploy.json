{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServiceName": {
      "type": "string",
      "metadata": {
        "description": "The name of your resource. This must be a new unique name. This will also be your custom domain name in your endpoint. Your resource name can only include alphanumeric characters and hyphens, and can't start or end with a hyphen or contain spaces."
      }
    },
    "cosmosDbName": {
      "type": "string"
    },
    "cosmosDbAccountName": {
      "type": "string"
    },
    "communicationServiceName": {
      "type": "string"
    },
    "communicationServiceDataLocation": {
      "type": "string",
      "allowedValues": [
        "Africa",
        "Asia Pacific",
        "Australia",
        "Brazil",
        "Canada",
        "Europe",
        "France",
        "Germany",
        "India",
        "Japan",
        "Korea",
        "Norway",
        "Switzerland",
        "UAE",
        "UK",
        "United States"
      ],
      "defaultValue": "United States",
      "metadata": {
        "description": "The location where the communication service stores its data at rest."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "F1",
      "metadata": {
        "description": "The resource offers different pricing SKUs to fit your needs. The SKU you select determines how much you will be billed each month."
      }
    },
    "microsoftBookingsUrl": {
      "type": "string",
      "defaultValue": "https://microsoftbookings.azurewebsites.net/?organization=financialservices&UICulture=en-US&CallBackURL=https%3A%2F%2Fproducts.office.com/business/bookings"
    },
    "chatEnabled": {
      "type": "bool",
      "defaultValue": "true"
    },
    "screenShareEnabled": {
      "type": "bool",
      "defaultValue": "true"
    },
    "companyName": {
      "type": "string",
      "defaultValue": "Lamna Healthcare"
    },
    "colorPalette": {
      "type": "string",
      "defaultValue": "#0078d4"
    },
    "waitingTitle": {
      "type": "string",
      "defaultValue": "Thank you for choosing Lamna Healthcare"
    },
    "waitingSubtitle": {
      "type": "string",
      "defaultValue": "Your clinician is joining the meeting"
    },
    "logoUrl": {
      "type": "string",
      "defaultValue": ""
    },
    "postCallSurveyType": {
      "type": "string",
      "defaultValue": "onequestionpoll"
    },
    "postCallSurveyOneQuestionPollTitle": {
      "type": "string",
      "defaultValue": "Tell us how we did"
    },
    "postCallSurveyOneQuestionPollPrompt": {
      "type": "string",
      "defaultValue": "How satisfied are you with this virtual appointment's audio and video quality?"
    },
    "postCallSurveyOneQuestionPollType": {
      "type": "string",
      "defaultValue": "likeOrDislike"
    },
    "postCallSurveyOneQuestionPollSaveButtonText": {
      "type": "string",
      "defaultValue": "Continue"
    }
  },
  "variables": {
    "appServicePlanPortalName": "[concat('AppServicePlan-', parameters('appServiceName'))]",
    "packageUrl": "https://github.com/Azure-Samples/communication-services-virtual-visits-js/releases/latest/download/sample.zip",
    "roleDefinitionName": "[concat('sql-role-definition-', toLower(parameters('appServiceName')))]",
    "roleDefinitionId": "[guid('sql-role-definition-', resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName')))]",
    "roleAssignmentId": "[guid(variables('roleDefinitionId'), resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName')))]",
    "postCallSurveyOptionsSurveyUrl": "",
    "postCallSurveyOneQuestionPollAnswerPlaceholder": ""
  },
  "resources": [
    {
      "name": "[parameters('communicationServiceName')]",
      "type": "Microsoft.Communication/communicationServices",
      "apiVersion": "2020-08-20",
      "location": "global",
      "tags": {},
      "properties": {
        "dataLocation": "[parameters('communicationServiceDataLocation')]"
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2022-05-15",
      "name": "[parameters('cosmosDbAccountName')]",
      "location": "[resourceGroup().location]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "databaseAccountOfferType": "Standard"
      },
      "condition": "[equals(parameters('postCallSurveyType'),'onequestionpoll')]"
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2020-06-01",
      "name": "[variables('appServicePlanPortalName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2020-06-01",
      "name": "[parameters('appServiceName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
        "[resourceId('Microsoft.Communication/communicationServices', parameters('communicationServiceName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanPortalName'))]",
        "httpsOnly": "true"
      },
      "resources": [
        {
          "name": "appsettings",
          "type": "config",
          "apiVersion": "2021-03-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]"
          ],
          "tags": {
            "displayName": "appsettings"
          },
          "properties": {
            "VV_COMMUNICATION_SERVICES_CONNECTION_STRING": "[listkeys(resourceId('Microsoft.Communication/communicationServices', parameters('communicationServiceName')), '2020-08-20').primaryConnectionString]",
            "WEBSITE_NODE_DEFAULT_VERSION": "12.21.0",
            "VV_MICROSOFT_BOOKINGS_URL": "[parameters('microsoftBookingsUrl')]",
            "VV_CHAT_ENABLED": "[parameters('chatEnabled')]",
            "VV_SCREENSHARE_ENABLED": "[parameters('screenShareEnabled')]",
            "VV_COMPANY_NAME": "[parameters('companyName')]",
            "VV_COLOR_PALETTE": "[parameters('colorPalette')]",
            "VV_WAITING_TITLE": "[parameters('waitingTitle')]",
            "VV_WAITING_SUBTITLE": "[parameters('waitingSubtitle')]",
            "VV_LOGO_URL": "[parameters('logoUrl')]",
            "VV_POSTCALL_SURVEY_TYPE": "[parameters('postCallSurveyType')]",
            "VV_POSTCALL_SURVEY_OPTIONS_SURVEYURL": "[parameters('postCallSurveyOptionsSurveyUrl')]",
            "VV_POSTCALL_SURVEY_ONEQUESTIONPOLL_TITLE": "[parameters('postCallSurveyOneQuestionPollTitle')]",
            "VV_POSTCALL_SURVEY_ONEQUESTIONPOLL_PROMPT": "[parameters('postCallSurveyOneQuestionPollPrompt')]",
            "VV_POSTCALL_SURVEY_ONEQUESTIONPOLL_TYPE": "[parameters('postCallSurveyOneQuestionPollType')]",
            "VV_POSTCALL_SURVEY_ONEQUESTIONPOLL_ANSWER_PLACEHOLDER": "[parameters('postCallSurveyOneQuestionPollAnswerPlaceholder')]",
            "VV_POSTCALL_SURVEY_ONEQUESTIONPOLL_SAVE_BUTTON_TEXT": "[parameters('postCallSurveyOneQuestionPollSaveButtonText')]",
            "VV_COSMOS_DB_ENDPOINT": "[if(equals(parameters('postCallSurveyType'),'onequestionpoll'), reference(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))).documentEndpoint, '')]",
            "VV_COSMOS_DB_NAME": "[parameters('cosmosDbName')]"
          }
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2021-03-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('appServiceName'))]",
            "[resourceId('Microsoft.Web/sites/config', parameters('appServiceName'), 'appsettings')]"
          ],
          "properties": {
            "packageUri": "[variables('packageUrl')]"
          }
        }
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions",
      "apiVersion": "2022-05-15",
      "name": "[format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleDefinitionId'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]"
      ],
      "properties": {
        "roleName": "[variables('roleDefinitionName')]",
        "type": "CustomRole",
        "assignableScopes": [
          "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]"
        ],
        "permissions": [
          {
            "dataActions": [
              "Microsoft.DocumentDB/databaseAccounts/readMetadata",
              "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers/items/read",
              "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers/executeQuery",
              "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/containers/readChangeFeed"
            ]
          }
        ]
      },
      "condition": "[equals(parameters('postCallSurveyType'),'onequestionpoll')]"
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlRoleAssignments",
      "apiVersion": "2022-05-15",
      "name": "[format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleAssignmentId'))]",
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions', split(format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleDefinitionId')), '/')[0], split(format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleDefinitionId')), '/')[1])]"
      ],
      "properties": {
        "roleDefinitionId": "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions', split(format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleDefinitionId')), '/')[0], split(format('{0}/{1}', parameters('cosmosDbAccountName'), variables('roleDefinitionId')), '/')[1])]",
        "principalId": "[reference(resourceId('Microsoft.Web/sites', parameters('appServiceName')),'2020-06-01', 'full').identity.principalId]",
        "scope": "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDbAccountName'))]"
      },
      "condition": "[equals(parameters('postCallSurveyType'),'onequestionpoll')]"
    }
  ]
}
