{
  "name": "server",
  "version": "1.2.5",
  "private": true,
  "scripts": {
    "test": "jest",
    "start:server": "ts-node-dev ./bin/www",
    "start:project": "concurrently \"npm run start:server\" \"cd ../client && npm run start:client\"",
    "start:prod": "cd ../dist && node server.js",
    "build:server": "webpack",
    "build:project": "concurrently \"npm run build:server\" \"cd ../client && npm run build:client\"",
    "package": "npm run build:project && copyfiles -E -V -u 1 \"dist/*\" ../dist && copyfiles -E -V -u 3 \"../client/dist/**/*\" ../dist/public",
    "prettier": "prettier --write --config .prettierrc src/**/*",
    "prettier:check": "prettier --check --config .prettierrc src/**/*",
    "lint": "eslint src src --ext .ts",
    "lint:fix": "eslint src src --ext .ts --fix",
    "lint:quiet": "eslint src src --ext .ts --quiet"
  },
  "dependencies": {
    "@azure/communication-chat": "1.0.0",
    "@azure/communication-common": "1.0.0",
    "@azure/communication-identity": "1.0.0",
    "@azure/communication-rooms": "^1.0.0-alpha.20221017.1",
    "@azure/core-http": "1.2.4",
    "@azure/cosmos": "^3.17.0",
    "@types/cors": "^2.8.8",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "eslint-plugin-header": "^3.1.0",
    "express": "~4.18.2",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/copy-webpack-plugin": "^6.4.0",
    "@types/express": "^4.17.8",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@types/webpack": "^5.28.1",
    "@types/webpack-node-externals": "^2.5.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^6.2.2",
    "copy-webpack-plugin": "^6.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "~2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "26.6.0",
    "jest-junit": "^13.0.0",
    "json-loader": "^0.5.7",
    "prettier": "2.0.5",
    "pretty-quick": "^3.1.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.12",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "4.9.5",
    "webpack": "5.76.0",
    "webpack-cli": "4.8.0",
    "webpack-node-externals": "3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
